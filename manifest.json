{
  "manifest_version": 2,
  "name": "TriMet Tracker",
  "version": "1.0",

  "description": "Realtime updates on TriMet arrival times at the stops you care about.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "applications": {
    "gecko": {
      "id": "trimettracker@fractalbrew.com",
      "strict_min_version": "53.0"
    }
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": [
      "appid.js",
      "background/main.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "TriMet Tracker",
    "default_popup": "content/popup.html"
  }
}