{
  "manifest_version": 2,

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "applications": {
    "gecko": {
      "id": "portlandtransittracker@fractalbrew.com",
      "strict_min_version": "53.0"
    }
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": [
      "background/main.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon.svg",
      "19": "icons/icon.svg",
      "32": "icons/icon.svg"
    },
    "theme_icons": [{
      "light": "icons/icon-white.svg",
      "dark": "icons/icon.svg",
      "size": 16
    }, {
      "light": "icons/icon-white.svg",
      "dark": "icons/icon.svg",
      "size": 19
    }, {
      "light": "icons/icon-white.svg",
      "dark": "icons/icon.svg",
      "size": 32
    }],
    "default_title": "Portland Transit Tracker",
    "default_popup": "panel/panel.html"
  },

  "sidebar_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Portland Transit Tracker",
    "default_panel": "sidebar/sidebar.html"
  }
}